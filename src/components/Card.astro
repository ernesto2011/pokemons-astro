---
interface Props {
    name: string;
    url: string;
    isbig?: boolean;
}
const {name, url, isbig=false}= Astro.props;
const parts = url.split('/');
const number = parts[parts.length - 2];
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${number}.png`

---

<a href={`/pokemon/${name}`} class:list={[
    "flex flex-col border-white items-center p-2 gap-4",
    !isbig && 'border rounded-xl'
]}>
    <img
    class:list={[
        'w-26 h-26',
        !isbig && 'w-16 h-16'
    ]}
    src={imgSrc} 
    alt={name}/>
    <span class:list={[
        "capitalize",
        isbig && 'text-3xl'
    ]}>#{number} {name}</span>
</a>