---
const links = [
  { href: "/", text: "Listado" },
  { href: "/pokemons/1", text: "Paginado" },
  { href: "/favorites", text: "Favorites" },
  { href: "/islands", text:"Islas" }
];

const currentPath = Astro.url.pathname

---

<nav class="bg-white shadow dark:bg-slate-900">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    {
      links.map(({href, text}) => (
        // <a
        //   href={href}
        //   class:list={[
        //     " hover:text-gray-800 dark:hover:text-gray-200 hover:border-blue-500 mx-1.5 sm:mx-6",
        //     {
        //         'border-b-2 border-blue-500': currentPath === href
        //     }
        //   ]}
        // >
        //   {text}
        // </a>
        <div>
            <a
          href={href}
          class=" hover:text-gray-800 dark:hover:text-gray-200 mx-1.5 sm:mx-6"
        >
          {text}
        </a>

        {
            currentPath === href ? (
                <div 
                transition:name="menu-line"
                class="border-b-2 border-blue-500 mx-4"></div>
            ) : (
                <div class="border-b-2 border-transparent"></div>
            )
        }
        
        </div>
      ))
    }
  </div>
</nav>
